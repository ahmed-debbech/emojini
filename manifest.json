{
    "manifest_version": 2,
    "name": "Emojini",
    "version": "0.1",
    "description": "Key bind your emojis for easy writting",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "16": "smiling.png",
        "48": "smiling.png",
        "128": "smiling.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": ["storage", "tabs", "activeTab"]
  }